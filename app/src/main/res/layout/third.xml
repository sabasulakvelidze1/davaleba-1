<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F7F5"
    tools:context=".OrderActivity">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="@string/back"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/titleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="40dp" />


    <!-- Toggle Buttons -->
    <LinearLayout
        android:id="@+id/toggleContainer"
        android:layout_width="361dp"
        android:layout_height="48dp"

        android:orientation="horizontal"
        android:padding="4dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp">

        <Button
            android:id="@+id/btnDeliver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C67C4E"
            android:text="Deliver"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnPickup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#EDEDED"
            android:text="Pick Up"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Delivery Address -->
    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/toggleContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/addressLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Jl. Kpg Sutoyo"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTitle" />

    <TextView
        android:id="@+id/addressLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kpg. Sutoyo No. 620, Bilzen, Tanjungbalai."
        android:textSize="13sp"
        android:textColor="#7A7A7A"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/addressLine1"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/addressButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/addressLine2"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnEditAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Edit Address"
            android:textSize="12sp"
            android:backgroundTint="#EDEDED"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#EDEDED"
            android:text="Add Note"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Coffee Item -->
    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/addressButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/yava"
            android:clipToOutline="true"
            android:contentDescription="Caffe Mocha" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caffe Mocha"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep Foam"
                android:textColor="#777777"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:backgroundTint="#EDEDED"
                android:background="@drawable/rounded_check_indeterminate_small_24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:backgroundTint="#EDEDED"
                android:background="@drawable/outline_add_24"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Discount Button -->
    <Button
        android:id="@+id/btnDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#F5F5F5"
        android:text="1 Discount is Applied"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/itemContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Payment Summary -->
    <TextView
        android:id="@+id/summaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Summary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnDiscount"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/summaryTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$4.53"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/summaryTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtDeliveryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Fee"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtPriceLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtDeliveryFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1.00"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtPrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wallet Row -->
    <TextView
        android:id="@+id/txtWalletLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash/Wallet"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDeliveryLabel"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/txtWalletLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="            $5.53"
        android:textStyle="bold"

        android:layout_marginTop="120dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDeliveryLabel"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/txtWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_arrow_downward_alt_24"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDeliveryFee"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Order Button -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        android:backgroundTint="#C67C4E"
        android:text="Order"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/txtWalletLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
